# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

[*.{php,py}]
indent_style = unset
indent_size = 4
